---
export interface Props {
  title: string;
}

const { title } = Astro.props;

---

<div class="cta">
  <div class="cta-container">
    <h2 class="cta-title">
      {title}<br />Start using our app today.
    </h2>
    <div class="cta-actions">
      <a href="#" class="cta-action-primary">Get started</a><a
        href="#"
        class="cta-action-secondary"
        >Learn more <span aria-hidden="true">â†’</span></a
      >
    </div>
  </div>
</div>

<style>
  .cta {
    background-color: #fff;
  }

  .cta-container {
    padding-top: 6rem;
    padding-bottom: 6rem;

    padding-left: 1.5rem;
    padding-right: 1.5rem;

    max-width: 80rem;

    margin-left: auto;
    margin-right: auto;
  }

  .cta-title {
    letter-spacing: -0.025em;
    font-weight: 700;

    font-size: 1.875rem;
    line-height: 2.25rem;

    color: rgb(17, 24, 39);
  }

  .cta-actions {
    display: flex;
    margin-top: 2.5rem;
    align-items: center;
    column-gap: 1.5rem;
  }

  .cta-action-primary {
    border-radius: 0.375rem;
    background-color: rgb(79, 70, 229);
    padding-left: 0.875rem;
    padding-right: 0.875rem;
    padding-top: 0.625rem;
    padding-bottom: 0.625rem;
    font-size: 0.875rem;
    line-height: 1.25rem;
    font-weight: 600;
    color: #fff;
  }

  .cta-action-secondary {
    font-size: 0.875rem;
    font-weight: 600;
    line-height: 1.5rem;
    color: rgb(17, 24, 39);
  }

  @media (min-width: 640px) {
    .cta-container {
      padding-top: 8rem;
      padding-bottom: 8rem;
    }

    .cta-title {
      font-size: 2.25rem;
      line-height: 2.5rem;
    }
  }

  @media (min-width: 1024px) {
    .cta-container {
      padding-left: 2rem;
      padding-right: 2rem;
    }
  }
</style>
